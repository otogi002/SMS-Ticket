<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iodgram.smsticket"
    android:versionCode="19"
    android:versionName="0.6.2-pre" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/SMSTicketStyle" >
        <activity
            android:name=".SMSTicketActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OverlayActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".generators.StockholmActivity" />
        <activity android:name=".generators.UppsalaActivity" />
        <activity android:name=".generators.GoteborgActivity" />
        <activity android:name=".generators.JonkopingActivity" />
        <activity android:name=".generators.UmeaActivity" />

        <service android:name=".OverlayService" />
    </application>

</manifest>